<table class="table table-striped">
    <thead>
        <tr>
            <th>Img</th>
            <th>Title</th>
            <th>Year</th>
            <th>Daily Rent</th>
            <th>Weekly Rent</th>
            <th>Deposit</th>
            <th>Age</th>
            <th>Price</th>
            {{!-- <th>Price(Text Form)</th> --}}
            {{!-- <th>Top Speed</th>
            <th>Time 60</th>
            <th>Range</th>
            <th>Color</th>
            <th>Interior</th>
            <th>Wheel</th> --}}
            <th>Description</th>
            {{!-- <th>Safety</th>
            <th>RangeDesc</th> --}}
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            {{!-- <td>
            
                <img style="height:3rem" src="/uploads/{{this.imagePath}}">
            
            </td> --}}
            <td><img style="height:3rem" src="/images/{{this.imagePath.[0]}}"></td>
            <td>{{this.title}}</td>
            
            <td>{{this.year}}</td>
            <td>{{this.dailyRent}}</td>
            <td>{{this.weeklyRent}}</td>
            <td>{{this.deposit}}</td>
            <td>{{this.age}}</td>
            <td>{{this.price}}</td>
            {{!-- <td>{{this.priceStr}}</td> --}}
            {{!-- <td>{{this.topspeed}}</td> --}}
            {{!-- <td>{{this.time60}}</td>
            <td>{{this.range}}</td>
            <td>{{this.colour}}</td>
            <td>{{this.interior}}</td>
            <td>{{this.wheel}}</td> --}}
            <td>{{this.description}}</td>
            {{!-- <td>{{this.safety}}</td>
            <td>{{this.rangedesc}}</td> --}}
            <td>
                <a class="btn btn-info btn-sm" href="editrent/{{this._id}}">Edit</a>
            </td>
            <td>
                <a class="btn btn-outline-danger btn-sm" href="deleterent/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record ?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>